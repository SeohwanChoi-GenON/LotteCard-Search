# ================================================================================
# 🚀 LOCA Gen AI - 운영 환경 설정
# ================================================================================

# 🌍 환경 설정
LOCA_DEPLOYMENT_ENV=production
LOCA_DEBUG=false
LOCA_PROFILE_ENABLED=false

# 🏗️ 애플리케이션 설정
LOCA_API_HOST=0.0.0.0
LOCA_API_PORT=8000
LOCA_WORKERS=8

# 🔧 운영 기능 (보안 강화)
LOCA_ENABLE_DEBUG_ENDPOINTS=false
LOCA_ENABLE_EXPERIMENTAL=false
LOCA_ENABLE_SWAGGER_UI=false
LOCA_REQUEST_TIMEOUT=15
LOCA_RATE_LIMIT_PER_MINUTE=60

# 🔐 운영 보안 (실제 값으로 교체 필요!)
LOCA_SECRET_KEY="${LOCA_PROD_SECRET_KEY}"
LOCA_CORS_ORIGINS=["https://loca.lottecard.co.kr"]

# 🗄️ 운영 데이터베이스
LOCA_DATABASE_URL="${LOCA_PROD_DATABASE_URL}"
LOCA_DB_MAX_CONNECTIONS=20
LOCA_DB_ECHO_SQL=false
LOCA_DB_CONNECTION_TIMEOUT=10

# 🚀 운영 Redis
LOCA_REDIS_URL="${LOCA_PROD_REDIS_URL}"
LOCA_REDIS_PASSWORD="${LOCA_PROD_REDIS_PASSWORD}"
LOCA_REDIS_MAX_CONNECTIONS=50
LOCA_REDIS_DEFAULT_TTL=7200

# 📊 운영 모니터링
LOCA_LOG_LEVEL=WARNING
LOCA_LOG_FILE_PATH="/var/log/loca/production-app.log"
LOCA_MAX_LOG_FILE_SIZE=52428800
LOCA_LOG_BACKUP_COUNT=10
LOCA_METRICS_ENABLED=true
LOCA_HEALTH_CHECK_ENABLED=true
LOCA_TRACING_SAMPLE_RATE=0.01

# 🚨 운영 알림
LOCA_ALERTING_ENABLED=true
LOCA_ALERT_WEBHOOK_URL="${LOCA_PROD_SLACK_WEBHOOK}"
LOCA_ALERT_CHANNELS=["#loca-alerts", "#ops-team"]

# 🦜 운영 LangChain
LANGSMITH_API_KEY="${LANGSMITH_PROD_API_KEY}"
LANGSMITH_PROJECT="loca-gen-ai-production"
LANGSMITH_TRACING_ENABLED=false
LANGCHAIN_VERBOSE=false
LANGCHAIN_DEBUG=false
LANGCHAIN_REQUEST_TIMEOUT=30
LANGCHAIN_MAX_ITERATIONS=10

# 🤖 운영 LLM 설정
OPENAI_API_KEY="${OPENAI_PROD_API_KEY}"
OPENAI_ORGANIZATION="${OPENAI_PROD_ORG_ID}"
LOCA_OPENAI_DEFAULT_MODEL="gpt-4o"
LOCA_LLM_REQUEST_TIMEOUT=30
LOCA_LLM_MAX_RETRIES=2

# 🔍 운영 Elasticsearch
LOCA_ES_HOSTS=["prod-es-1.lottecard.co.kr:9200", "prod-es-2.lottecard.co.kr:9200", "prod-es-3.lottecard.co.kr:9200"]
LOCA_ES_USERNAME="${LOCA_PROD_ES_USERNAME}"
LOCA_ES_PASSWORD="${LOCA_PROD_ES_PASSWORD}"
LOCA_ES_USE_SSL=true
LOCA_ES_VERIFY_CERTS=true
LOCA_ES_NUMBER_OF_REPLICAS=1
LOCA_ES_REFRESH_INTERVAL="30s"
LOCA_ES_REQUEST_TIMEOUT=15