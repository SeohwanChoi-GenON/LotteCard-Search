# ================================================================================
# 🏠 LOCA Gen AI - 로컬 개발 환경 설정
# ================================================================================

# 🌍 환경 설정
LOCA_DEPLOYMENT_ENV=local
LOCA_DEBUG=true
LOCA_PROFILE_ENABLED=true

# 🏗️ 애플리케이션 설정
LOCA_API_HOST=127.0.0.1
LOCA_API_PORT=8000
LOCA_WORKERS=1

# 🔧 개발 기능 활성화
LOCA_ENABLE_DEBUG_ENDPOINTS=true
LOCA_ENABLE_EXPERIMENTAL=true
LOCA_ENABLE_SWAGGER_UI=true

# 🔐 개발용 시크릿 (운영에서 변경 필수!)
LOCA_SECRET_KEY="dev-secret-key-change-in-production"
LOCA_CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:8000"]

# 🗄️ 로컬 데이터베이스
LOCA_DATABASE_URL="postgresql://loca:loca123@localhost:5432/loca_dev"
LOCA_DB_ECHO_SQL=true

# 🚀 로컬 Redis
LOCA_REDIS_URL="redis://localhost:6379/0"
LOCA_REDIS_PASSWORD=""

# 📊 개발용 로깅
LOCA_LOG_LEVEL=DEBUG
LOCA_METRICS_ENABLED=true

# 🦜 LangChain 개발 설정
LANGSMITH_TRACING_ENABLED=true
LANGCHAIN_VERBOSE=true
LANGCHAIN_DEBUG=true

# 🤖 개발용 LLM 설정 (더 저렴한 모델)
LOCA_OPENAI_DEFAULT_MODEL="gpt-3.5-turbo"
LOCA_LLM_TEMPERATURE=0.1
LOCA_LLM_ENABLE_STREAMING=false

# 🔍 로컬 Elasticsearch
LOCA_ES_HOSTS=["localhost:9200"]
LOCA_ES_USE_SSL=false
LOCA_ES_VERIFY_CERTS=false

# 🔧 자동 검증 활성화
LOCA_AUTO_VALIDATE_CONFIG=true