# === 애플리케이션 기본 설정 ===
APP_NAME=롯데카드 사내지식 Chat API
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# === Gateway 설정 (두 가지 방법 지원) ===
GATEWAY_ENABLED=true
GATEWAY_HEADER_MODE=true
GATEWAY_BODY_MODE=false
GATEWAY_REQUIRE_GUID=true
GATEWAY_REQUIRE_TSMT=true
GATEWAY_STRICT_VALIDATION=false

GATEWAY_DEFAULT_SRC_SYS_CD=GAI
GATEWAY_DEFAULT_STC_BIZ_CDD=BR
GATEWAY_DEFAULT_GRAM_PRG_NO=00
GATEWAY_DEFAULT_GRAN_NO=N

GATEWAY_EXTRACTION_TIMEOUT=5.0
GATEWAY_MAX_BODY_SIZE=1048576
GATEWAY_LOG_INFO=true
GATEWAY_LOG_MISSING_HEADERS=true


# === 데이터베이스 설정 ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=loca_db
DB_USERNAME=loca_user
DB_PASSWORD=loca_password

# === LLM 설정 ===
LLM_PROVIDER=openai
LLM_API_KEY=your-api-key-here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1